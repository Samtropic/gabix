{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18.12.0"
  },
  "scripts": {
    "serve": "yarn run build && cross-env NODE_ENV=development-local concurrently npm:serveonly:*",
    "serveonly:tsc": "concurrently npm:tsc:*",
    "tsc:alias": "tsc -w",
    "tsc:tsc": "tsc-alias -w",
    "serveonly:server": "nodemon -L -e js --experimental-loader=extensionless --experimental-specifier-resolution=node dist/main.js --quiet",
    "serve-nodemon": "nodemon --exec 'yarn run build && yarn run serve-exec'",
    "serve-exec": "node --experimental-specifier-resolution=node dist/main.js",
    "build": "rimraf dist && tsc && tsc-alias && shx cp -r tsconfig.json dist/src",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config src/app/tests/jest-e2e.json"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "roots": [
      "<rootDir>/src/"
    ],
    "moduleNameMapper": {
      "^@api/(.*)$": "<rootDir>/src/app/$1"
    }
  },
  "dependencies": {
    "@faker-js/faker": "7.6.0",
    "chalk": "5.2.0",
    "composable-middleware": "0.3.1",
    "config": "^3.3.11",
    "cors": "2.8.5",
    "crypto": "1.0.1",
    "express": "4.18.2",
    "express-jwt": "5.3.3",
    "express-validator": "6.15.0",
    "moment": "2.29.4",
    "mongodb": "5.1.0",
    "mongoose": "7.0.3",
    "morgan": "1.10.0",
    "passport": "0.6.0",
    "passport-local": "1.0.0",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@types/jest": "29.5.10",
    "concurrently": "8.2.2",
    "cross-env": "^7.0.3",
    "extensionless": "^1.9.9",
    "jest": "29.7.0",
    "jest-jasmine2": "29.7.0",
    "nodemon": "3.0.1",
    "prettier": "2.8.8",
    "rimraf": "^5.0.7",
    "shx": "^0.3.4",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "tsc-alias": "1.8.5",
    "typescript": "5.0.3"
  }
}
